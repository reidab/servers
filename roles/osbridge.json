{
  "name": "osbridge",
  "run_list": [
    "role[nginx]",
    "role[mysql]",
    "role[apache]",
    "recipe[ruby_install]",
    "recipe[xml]",
    "recipe[nodejs]",
    "recipe[puma_app]"
  ],
  "default_attributes": {
    "ruby_install": { "version": "0.3.1" },
    "puma_app": {
      "apps": [
        "osbridge-ocw"
      ]
    },
    "firewall": {
      "rules": [
        {"http": { "port": "5500" } }
      ]
    },
    "simple-mysql-database": {
      "databases": ["osbridge_ocw"]
    }
  },
  "override_attributes": {
    "apache": {
      "listen_ports": ["5500"]
    }
  },
  "chef_type": "role",
  "json_class": "Chef::Role"
}

