{
  "name": "apache",
  "run_list": [
    "role[base]",
    "recipe[php]",
    "recipe[apache2]",
    "recipe[apache2::mod_ssl]",
    "recipe[apache2::mod_rewrite]",
    "recipe[apache2::mod_php]",
    "recipe[simple-apache-config]",
    "recipe[server-banner::apache]"
  ],
  "default_attributes": {
    "platform_packages": {
      "pkgs": [
        { "name": "php-mysql" },
        { "name": "php-memcache" },
        { "name": "php-tidy" },
        { "name": "php-curl" },
        { "name": "php-intl" },
        { "name": "php-apcu" }
      ]
    },
    "apache": {
      "timeout": 60,
      "mpm": "prefork",
      "prefork": {
        "startservers": 5,
        "minspareservers": 5,
        "maxspareservers": 10,
        "serverlimit": 100,
        "maxclients": 100,
        "maxrequestsperchild": 1000
      }
    },
    "firewall": {
      "rules": [
        {"http": { "port": "80" } },
        {"https": { "port": "443" } }
      ]
    }
  },
  "chef_type": "role",
  "json_class": "Chef::Role"
}

