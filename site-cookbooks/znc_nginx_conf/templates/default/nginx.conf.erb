server {
    listen       80;
    server_name  <%= @server_name %>;

    location / {
        proxy_pass             http://localhost:<%= @internal_port %>/;
        proxy_set_header       Host $host;
        # be carefull, this line doesn't override any proxy_buffering on set in a conf.d/file.conf
        proxy_buffering off;
    }
}
